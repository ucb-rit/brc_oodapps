# Batch Connect app configuration file
#
# @note Used to define the submitted cluster, title, description, and
#   hard-coded/user-defined attributes that make up this Batch Connect app.
---

cluster: "brc"

form:
  - r_server
  - r_app
  - r_spatial
  - job_name
  - modules
  - bc_num_hours
  - slurm_reservation



attributes:
  r_server: "rstudio-server/2024.04.2-764"
  r_app: "r/4.4.0-gcc-11.4.0"
  r_spatial: "r-spatial/4.4.0"

  job_name:
    label: "Name of the Job"
    value: "OOD_RStudio"
    
  modules:
    label: "Software modules"
    help: "List Savio software module(s) to load for use with RStudio, separated by spaces, without quotes. Version numbers are optional."
    
  bc_num_hours:
    label: "Wall Clock Time"
    help: "The maximum number of hours your RStudio session will run for. Please delete your session when you are done."
    value: 1

  slurm_reservation:
    label: "Reservation (Optional)"
    help: "Enter your reservation name (e.g. maint) if you have a slurm reservation. Leave blank if you do not have a slurm reservation."
    cacheable: false

